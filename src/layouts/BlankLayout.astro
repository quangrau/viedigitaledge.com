---
import GlobalHead from '../components/GlobalHead.astro'
const { title } = Astro.props
---

<!doctype html>
<html lang="vi" class="dark">
	<GlobalHead {title} />
	<body class="bg-white dark:bg-gray-900">
		<slot />
		<style>
			html {
				font-family: Urbanist, sans-serif;
				scroll-behavior: smooth;
			}

			body {
				margin: 0;
			}
		</style>
	</body>
</html>
